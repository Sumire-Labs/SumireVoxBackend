# .env.example
# このファイルをコピーして .env として使用してください

# 環境設定
# development or production
ENV=development

# Discord OAuth
DISCORD_CLIENT_SECRET=your_discord_client_secret
DISCORD_REDIRECT_URI=http://localhost:8000/auth/discord/callback
DISCORD_BOT_TOKEN=your_bot_token

# セッション設定
# 本番環境では32文字以上の安全なランダム文字列を使用
# 生成コマンド: python -c "import secrets; print(secrets.token_hex(32))"
SESSION_SECRET=your_session_secret_at_least_32_characters
SESSION_TTL_DAYS=7
COOKIE_SECURE=false

# 暗号化キー（本番環境必須）
# 生成コマンド: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your_fernet_encryption_key

# データベース
DATABASE_URL=postgresql://user:password@localhost:5432/sumirevox

# Stripe（決済機能を使用する場合）
STRIPE_API_KEY=sk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_ID=price_your_price_id

# URLs
DOMAIN=http://localhost:5173
FRONTEND_AFTER_LOGIN_URL=http://localhost:5173/

# 許可されたリダイレクトホスト（カンマ区切り）
ALLOWED_REDIRECT_HOSTS=sumirevox.com,localhost

# レート制限（オプション）
RATE_LIMIT_DEFAULT=60/minute
RATE_LIMIT_AUTH=10/minute
RATE_LIMIT_PAYMENT=5/minute
